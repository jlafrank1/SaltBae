<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/public/styles/style.css">
        <!-- <script src="app.js" charset="utf-8"></script> -->
        <title></title>
    </head>
    <body>
      <h1>Projects Index</h1>
      <ul>
          <% projects.forEach(project => { %>
              <li>
                <a href="/saltbae/<%=project._id%>"><%= project.name%></a>
                <form method="POST" action="/saltbae/<%=project._id%>?_method=DELETE">
                <input type="submit" value="DELETE"/>
              </form>
            </li>
             <% }) %>
      </ul>
     <a href="/saltbae/new">Create New Project</a>
    </body>
</html>
