<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/public/styles/style.css">
        <!-- <script src="app.js" charset="utf-8"></script> -->
        <title></title>
    </head>
    <body>
      <h4>Hello, <%=currentUser.userName%>!</h4>
        <div class="container">
        <h1>Projects Index</h1>
        <ul class="projects-list">
            <% projects.forEach(project => { %>
                <li>
                  <a class="project-title" href="/saltbae/<%=project._id%>"><%= project.name%></a>
                  <form class="delete-form" method="POST" action="/saltbae/<%=project._id%>?_method=DELETE">
                  <input type="submit" value="DELETE" class="delete-button" />
                </form>
              </li>
              <% }) %>
        </ul>
        <a class="create-project-link" href="/saltbae/new">Create New Project</a>



    </div>

    </body>
</html>
